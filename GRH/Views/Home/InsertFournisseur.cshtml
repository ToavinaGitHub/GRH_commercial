@{
    Layout = "~/Views/Shared/BackOfficeAccueil.cshtml";
}



    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Formulaire Fournisseur</title>
    <style>
        

        form {
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            text-align: center;
        }

        h2 {
            color: #1877f2;
        }

        label {
            display: block;
            margin-bottom: 8px;
            text-align: left;
            color: #1877f2;
        }

        input[type=text], input[type=email], input[type=tel] {
            width: 100%;
            padding: 10px;
            margin-bottom: 16px;
            box-sizing: border-box;
            border: 1px solid #ddd;
            border-radius: 4px;
        }

        button {
            background-color: #1877f2;
            color: #fff;
            padding: 10px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

            button:hover {
                background-color: #166fe5;
            }
    </style>

<form id="supplier-form" action="https://localhost:7248/Home/saveFournisseur/" method="post" enctype="application/x-www-form-urlencoded">
        <h2>Ajouter un nouveau fournisseur</h2>

        <label for="nom">Nom:</label>
        <input type="text" id="name" name="nom" required>

        <label for="adresse">Adresse:</label>
        <input type="text" id="address" name="adresse" required>

        <label for="email">Email:</label>
        <input type="email" id="email" name="email" required>

        <label for="phone">Numéro de téléphone:</label>
        <input type="tel" id="phone" name="phone" required>

        <label for="responsable">Responsable:</label>
        <input type="text" id="responsible" name="responsable" required>

        <input type="submit" value="Ajouter Fournisseur" class="btn btn-primary">
    </form>

    <script>
        function submitForm() {
            var name = document.getElementById("name").value;
            var address = document.getElementById("address").value;
            var email = document.getElementById("email").value;
            var phone = document.getElementById("phone").value;
            var responsible = document.getElementById("responsible").value;

            console.log("Nom:", name);
            console.log("Adresse:", address);
            console.log("Email:", email);
            console.log("Numéro de téléphone:", phone);
            console.log("Responsable:", responsible);

            document.getElementById("supplier-form").reset();
        }
    </script>
