                        <td contenteditable="true">@details.Quantite</td>
                        <td class="unit" contenteditable="true">@details.proforma.article.NomArticle</td>
                        <td class="amount" contenteditable="true">@details.proforma.PrixUnitaire</td>
                         <td class="TVA" contenteditable="true">@details.proforma.TVA</td>
                        <td class="amount amountColumn rowTotal" contenteditable="true">0</td>
                        <td class="docEdit tdDelete">X</td>
                    </tr>
           
                </tbody>
