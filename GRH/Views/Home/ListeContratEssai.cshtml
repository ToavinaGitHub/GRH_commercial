
@{
    Layout = "~/Views/Shared/BackOfficeAccueil.cshtml";
}
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Liste Contrat</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                <tr>
                    <th>Client</th>
                    <th>Poste</th>
                    <th>Debut</th>
                    <th>Fin</th>
                    <th>Adresse</th>
                    <th>Salaire</th>
                    <th>Rh</th>
                    <th>Action</th>
                    <th>Autres</th>
                </tr>
                </thead>
                <tfoot>
                <tr>
                    <th>Client</th>
                    <th>Poste</th>
                    <th>Debut</th>
                    <th>Fin</th>
                    <th>Adresse</th>
                    <th>Salaire</th>
                    <th>Rh</th>
                    <th>Action</th>
                    <th>Autres</th>
                </tr>
                </tfoot>
                <tbody>
                @foreach (Contrat c in @ViewBag.allContrat)
                {
                    <tr>
                        <td>@c.clients.nom</td>
                        <td>@c.poste.nomPoste</td>
                        <td>@c.debut</td>
                        <td>@c.fin</td>
                        <td>@c.addresse</td>
                        <td>@c.salaire</td>
                        <td>@c.rh.email</td>
                        
                        <td class="action-table">
                            <a href="#" class="btn btn-success btn-circle">
                                <i class="fas fa-pencil-alt"></i>
                            </a>
                            <a href="#" class="btn btn-danger btn-circle">
                                <i class="fas fa-trash"></i>
                            </a>
                            <a href="" class="btn btn-info btn-circle">
                                <i class="fas fa-info-circle"></i>
                            </a>
                        </td>
                        <td><a href="https://localhost:7248/Home/toAnotherContrat?idContrat=@c.idContrat">Nouveau Contrat</a></td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>